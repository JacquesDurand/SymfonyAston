{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Book index</h1>

    <table class="table table-stripped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Style</th>
                <th>Author</th>
                <th>Cover</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.style }}</td>
                <td>{{book.author}}</td>
                <td><img src="{{book.cover}}" alt="" height="150px" width="150px"></td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
</div>
{% endblock %}